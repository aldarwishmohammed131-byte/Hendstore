  </div>  <script>
    function serializeNode(node){
      const svg = node.querySelector('svg');
      const clone = svg.cloneNode(true);
      // Ensure background if missing
      const vb = clone.getAttribute('viewBox');
      if(!clone.querySelector('rect[fill]')){
        const bg = document.createElementNS('http://www.w3.org/2000/svg','rect');
        const [minx,miny,w,h] = vb? vb.split(' ').map(Number) : [0,0,svg.clientWidth, svg.clientHeight];
        bg.setAttribute('x',minx); bg.setAttribute('y',miny); bg.setAttribute('width',w); bg.setAttribute('height',h);
        bg.setAttribute('fill','#0b0b0f');
        clone.insertBefore(bg, clone.firstChild);
      }
      const xml = new XMLSerializer().serializeToString(clone);
      return '<?xml version="1.0" encoding="UTF-8"?>\n' + xml;
    }

    function downloadBlob(data, filename, type){
      const blob = new Blob([data], {type});
      const url = URL.createObjectURL(blob);
      const a = document.createElement('a'); a.href = url; a.download = filename; document.body.appendChild(a); a.click();
      setTimeout(()=>{ URL.revokeObjectURL(url); a.remove(); }, 200);
    }

    function downloadSVG(id, filename){
      const node = document.getElementById(id);
      const xml = serializeNode(node);
      downloadBlob(xml, filename, 'image/svg+xml');
    }

    function downloadPNG(id, size, filename){
      const xml = serializeNode(document.getElementById(id));
      const svgUrl = 'data:image/svg+xml;charset=utf-8,' + encodeURIComponent(xml);
      const img = new Image();
      img.onload = function(){
        const canvas = document.createElement('canvas');
        const ratio = img.height / img.width;
        canvas.width = size; canvas.height = Math.round(size * ratio);
        const ctx = canvas.getContext('2d');
        ctx.fillStyle = '#0b0b0f'; ctx.fillRect(0,0,canvas.width,canvas.height);
        ctx.drawImage(img, 0, 0, canvas.width, canvas.height);
        canvas.toBlob(b => downloadBlob(b, filename, 'image/png'));
      };
      img.src = svgUrl;
    }
  </script></body>
